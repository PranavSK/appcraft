import { useAtomValue } from 'jotai';
import { type FC } from 'react';

import { Widget } from '#/features/ui/widget';
import { cn } from '#/lib/utils';

import type { NodeProps } from '../node.types';
import { nodeStateAtomFamily } from './store';

export const Component: FC<NodeProps> = ({ id, className }) => {
  const { someProperty, ...state } = useAtomValue(nodeStateAtomFamily(id));
  return (
    <Widget className={cn(className)} {...state}>
      <div>{someProperty}</div>
    </Widget>
  );
};
